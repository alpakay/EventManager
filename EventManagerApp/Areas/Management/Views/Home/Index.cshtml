@model User
@{
    ViewData["Title"] = "Management Home";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h3 class="card-title">Hoş geldiniz, <strong>@Model.FullName</strong></h3>
                    <p class="text-muted">Lütfen aşağıdaki işlemlerden birini seçin:</p>

                    <div class="d-grid gap-3 mt-4">
                        <a asp-controller="User" asp-action="Profile" class="btn btn-outline-primary btn-lg">Profil Sayfam</a>
                        <a asp-area="Management" asp-controller="Event" asp-action="Index" class="btn btn-outline-success btn-lg">
                            Etkinlik Yönetimi
                        </a>
                        <form asp-controller="User" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-outline-danger btn-lg">Güvenli Çıkış</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>