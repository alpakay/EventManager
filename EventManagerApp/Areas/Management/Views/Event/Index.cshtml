@model IEnumerable<EventShowDto>

<div>
    <a class="btn btn-primary" asp-area="Management" asp-controller="Event" asp-action="Create">Yeni Etkinlik Ekle</a>
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Etkinlik Adı</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Ekleyen</th>
            <th>Oluşturulma Tarihi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Name</td>
                <td>@eventItem.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@eventItem.EndDate.ToString("dd/MM/yyyy")</td>
                <td>@eventItem.CreatorName</td>
                <td>@eventItem.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@if(eventItem.IsActive) { <span class="badge bg-success">Aktif</span> } else { <span class="badge bg-danger">Pasif</span> }</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-area="Management" asp-controller="Event" asp-action="Edit" asp-route-id="@eventItem.EventId">Düzenle</a>
                </td>
            </tr>
        }
    </table>
</div>