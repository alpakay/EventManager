@model IEnumerable<Event>

<div>
    <a class="btn btn-primary" asp-area="Management" asp-controller="Event" asp-action="Create">Yeni Etkinlik Ekle</a>
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Etkinlik Adı</th>
            <th>Etkinlik Tarihi</th>
            <th>Açıklama</th>
            <th>Katılımcı Sayısı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Name</td>
                <td>@eventItem.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@eventItem.Description</td>
            </tr>
        }
    </table>
</div>