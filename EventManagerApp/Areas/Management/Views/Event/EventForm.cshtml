@model EventFormDto
@{
    var title = Model.IsEditMode ? "Etkinlik Güncelle" : "Yeni Etkinlik";
    var buttonText = Model.IsEditMode ? "Güncelle" : "Oluştur";
    var action = Model.IsEditMode ? "Edit" : "Create";
}
<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg p-4" style="width: 100%; max-width: 500px;">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">@title</h2>
            <form method="post" asp-action="@action">
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                {
                    <div asp-validation-summary="All" class="alert alert-danger"></div>
                }
                <input type="hidden" asp-for="EventId" />
                <div class="form-group my-3">
                    <label asp-for="Name">Etkinlik Adı</label>
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
                <div class="form-group my-3">
                    <label asp-for="Description">Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description" />
                </div>
                <div class="form-group my-3">
                    <label asp-for="StartDate">Başlangıç Tarihi</label>
                    <input type="date" class="form-control" asp-for="StartDate" />
                </div>
                <div class="form-group my-3">
                    <label asp-for="EndDate">Bitiş Tarihi</label>
                    <input type="date" class="form-control" asp-for="EndDate" />
                </div>
                <div class="form-group my-3">
                    <label asp-for="ImgUrl">Görsel URL</label>
                    <input type="text" class="form-control" asp-for="ImgUrl" />
                </div>
                <div class="btn-group mb-3 mt-5 d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary w-50">@buttonText</button>
                    @if (Model.IsEditMode)
                    {
                        <button class="btn btn-danger w-50" method="post" asp-action="Delete" asp-route-id="@Model.EventId">Sil</button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>