@model UserRegisterDto

<div class="text-center">
    <div class="display-6">Kayıt Ol</div>
</div>

<form method="post" asp-action="Register" class="form-horizontal">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group my-3">
        <label asp-for="FullName"></label>
        <input type="text" class="form-control" asp-for="FullName" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Email"></label>
        <input type="text" class="form-control" asp-for="Email" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Password"></label>
        <input type="password" class="form-control" asp-for="Password" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ConfirmPassword"></label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
    </div>
    <div class="form-group my-3">
        <label asp-for="BirthDate"></label>
        <input type="date" class="form-control" asp-for="BirthDate" />
    </div>
    <button type="submit" class="btn btn-primary">Kayıt Ol</button>
</form>