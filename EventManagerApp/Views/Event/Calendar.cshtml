<div class="calendar-container">
    <div class="calendar-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <div class="header-text">
                <h1 class="header-title">Etkinlik Takvimi</h1>
                <p class="header-subtitle">Tüm etkinlikleri takvim görünümünde keşfedin</p>
            </div>
        </div>
    </div>
    
    <div class="calendar-wrapper">
        <div id="calendar"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@6.1.18/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendar = new FullCalendar.Calendar(document.getElementById('calendar'), {
                initialView: 'dayGridMonth',
                locale: 'tr',
                themeSystem: 'bootstrap5',
                buttonText: {
                    today: 'Bugün',
                },
                moreLinkText: 'etkinlik',
                customButtons: {
                    toListViewButton: {
                        text: 'Liste Görünümü',
                        click: function() {
                            window.location.href = '@Url.Action("Index", "Event", new { area = "" })';
                        }
                    }
                },
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'toListViewButton'
                },
                height: 'auto',
                width: 'auto',
                events: 'GetEventsForCalendar',
                displayEventTime: false,
                eventBorderColor: 'grey',
                schedulerLicenseKey: 'CC-Attribution-NonCommercial-NoDerivatives',
                dayHeaderFormat: { weekday: 'long' },
                dayMaxEventRows: 4,
                firstDay: 2,
            });
            calendar.render();
            const listViewButton = document.querySelector('.fc-toListViewButton-button');
            if (listViewButton) listViewButton.innerHTML = '<i class="fas fa-list me-3"></i> Liste Görünümü';
        });
    </script>
}

