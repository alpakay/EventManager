@model IEnumerable<EventShowDto>

<div>
    <table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Etkinlik Adı</th>
            <th>Başlangıç Tarihi</th>
            <th>Bitiş Tarihi</th>
            <th>Ekleyen</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var eventItem in Model)
        {
            <tr>
                <td>@eventItem.Name</td>
                <td>@eventItem.StartDate.ToString("dd/MM/yyyy")</td>
                <td>@eventItem.EndDate.ToString("dd/MM/yyyy")</td>
                <td>@eventItem.CreatorName</td>
                <td>@eventItem.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-area="" asp-controller="Event" asp-action="Details" asp-route-id="@eventItem.EventId">Detaylar</a>
                </td>
            </tr>
        }
    </table>
</div>