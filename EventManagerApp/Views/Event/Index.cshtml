@model IEnumerable<EventShowDto>

<div class="public-events-container">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-background">
            <img src="~/Images/app-banner.jpg" alt="Etkinlik Banner" class="hero-image" />
            <div class="hero-overlay"></div>
        </div>
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">EventManagerApp</h1>
                <p class="hero-subtitle">Etkinliklerinizi kolayca yönetin! Kullanıcı dostu arayüzüyle etkinlik oluşturma, etkinlik bulma ve takvim entegrasyonu sunan modern bir organizasyon uygulamasıdır.</p>
                <div class="hero-stats">
                    <div class="stat-item">
                        <div class="stat-number">@Model.Count()</div>
                        <div class="stat-label">Aktif Etkinlik</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">@Model.Select(e => e.CreatorName).Distinct().Count()</div>
                        <div class="stat-label">Organizatör</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">@Model.Count(e => e.StartDate > DateTime.Now)</div>
                        <div class="stat-label">Yaklaşan</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Events Section -->
    <div class="events-section">
        <div class="section-header">
            <h2 class="section-title">
                <i class="fas fa-calendar-alt me-3"></i>
                Tüm Etkinlikler
            </h2>
            <p class="section-subtitle">Yaklaşan etkinlikleri keşfedin ve katılın</p>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="events-grid">
                @foreach (var eventItem in Model)
                {
                    <div class="event-card">
                        <div class="event-header">
                            <div class="event-date">
                                <div class="date-day-user-event">@eventItem.StartDate.Day</div>
                                <div class="date-month">@eventItem.StartDate.ToString("MMM", new System.Globalization.CultureInfo("tr-TR"))</div>
                            </div>
                            <div class="event-status @(eventItem.StartDate > DateTime.Now ? "upcoming" : "past")">
                                @if (eventItem.StartDate > DateTime.Now)
                                {
                                    <i class="fas fa-clock me-1"></i>
                                    <span>Yaklaşan</span>
                                }
                                else
                                {
                                    <i class="fas fa-check me-1"></i>
                                    <span>Tamamlandı</span>
                                }
                            </div>
                        </div>

                        <div class="event-content">
                            <h3 class="event-title">@eventItem.Name</h3>
                            
                            <div class="event-details-user">
                                <div class="detail-item">
                                    <i class="fas fa-calendar-day detail-icon"></i>
                                    <div class="detail-text">
                                        <span class="detail-label">Başlangıç</span>
                                        <span class="detail-value">@eventItem.StartDate.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </div>

                                <div class="detail-item">
                                    <i class="fas fa-calendar-times detail-icon"></i>
                                    <div class="detail-text">
                                        <span class="detail-label">Bitiş</span>
                                        <span class="detail-value">@eventItem.EndDate.ToString("dd/MM/yyyy HH:mm")</span>
                                    </div>
                                </div>

                                <div class="detail-item">
                                    <i class="fas fa-user detail-icon"></i>
                                    <div class="detail-text">
                                        <span class="detail-label">Organizatör</span>
                                        <span class="detail-value">@eventItem.CreatorName</span>
                                    </div>
                                </div>

                                <div class="detail-item">
                                    <i class="fas fa-plus-circle detail-icon"></i>
                                    <div class="detail-text">
                                        <span class="detail-label">Oluşturulma</span>
                                        <span class="detail-value">@eventItem.CreatedAt.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="event-footer">
                            <a class="btn-event-details" asp-area="" asp-controller="Event" asp-action="Details" asp-route-id="@eventItem.EventId">
                                <i class="fas fa-info-circle me-2"></i>
                                Detayları Görüntüle
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-events">
                <div class="empty-content">
                    <i class="fas fa-calendar-times empty-icon"></i>
                    <h3 class="empty-title">Henüz etkinlik yok</h3>
                    <p class="empty-text">Şu anda görüntülenecek etkinlik bulunmuyor. Yakında yeni etkinlikler eklenecek!</p>
                </div>
            </div>
        }
    </div>
</div>